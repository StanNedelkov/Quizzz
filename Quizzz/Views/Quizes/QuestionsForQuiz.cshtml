@model IEnumerable<Quizzz.Core.Models.QuestionViewModel>

@{
    ViewData["Title"] = "QuestionsForQuiz";
}

<h4>
    Questions
    </h4>
<p>
    <a asp-controller="Questions" asp-action="CreateNew">Add a question</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    <a asp-controller="Questions" asp-action="AnswersForQuestion" asp-route-id="@item.Id">Answers</a> |
                    <a asp-controller = "Questions" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-controller="Questions" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-controller="Questions" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>